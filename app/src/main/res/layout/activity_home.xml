<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 标题栏 -->
    <include layout="@layout/title_bar"/>
    <!-- FrameLayout -->
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
    <!-- RadioGroup -->
    <RadioGroup
        android:id="@+id/rg_home"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:background="#11000000">
        <!-- 常用框架 -->
        <RadioButton
            android:id="@+id/rb_common_frame"
            android:drawableTop="@drawable/selector_drawable_rb_common_frame"
            android:text="常用框架"
            style="@style/BottomTagStyle"/>
        <!-- 第三方 -->
        <RadioButton
            android:id="@+id/rb_third_party"
            android:drawableTop="@drawable/selector_drawable_rb_third_party"
            android:text="第三方"
            style="@style/BottomTagStyle"/>
        <!-- 自定义控件 -->
        <RadioButton
            android:id="@+id/rb_custom_view"
            android:drawableTop="@drawable/selector_drawable_rb_custom_view"
            android:text="自定义控件"
            style="@style/BottomTagStyle"/>
        <!-- 其他 -->
        <RadioButton
            android:id="@+id/rb_another"
            android:drawableTop="@drawable/selector_drawable_rb_another"
            android:text="其他"
            style="@style/BottomTagStyle"/>
    </RadioGroup>
</LinearLayout>