<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/title_bar"/>
    <Button
        android:id="@+id/btn_json_obj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="将Json对象转换为Java对象"
        android:textSize="18sp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_arr_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="将Json数组转换为Java集合"
        android:textSize="18sp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_complex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="复杂Json数据解析"
        android:textSize="18sp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_special"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="特殊Json数据解析"
        android:textSize="18sp"
        android:textAllCaps="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="原始数据"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_light"/>
    <TextView
        android:id="@+id/tv_original"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="转换后的数据"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_light"/>
    <TextView
        android:id="@+id/tv_transformed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"/>
</LinearLayout>